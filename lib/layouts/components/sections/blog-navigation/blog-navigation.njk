{# 
  Blog navigation section
  This section can be added to any blog post to show previous/next links
  Only displays if the current page has previous or next blog posts
#}

{% if previous or next %}
  <nav class="blog-navigation container" aria-label="Blog post navigation">
    {% if previous %}
      <a href="{{ previous.urlPath }}" class="blog-nav-link blog-nav-prev">
        <span class="blog-nav-label">← Previous</span>
        <span class="blog-nav-title">{{ previous.card.title }}</span>
      </a>
    {% endif %}

    {% if next %}
      <a href="{{ next.urlPath }}" class="blog-nav-link blog-nav-next">
        <span class="blog-nav-title">{{ next.card.title }}</span>
        <span class="blog-nav-label">Next →</span>
      </a>
    {% endif %}
  </nav>
{% endif %}